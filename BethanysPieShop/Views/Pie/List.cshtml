@model PiesListViewModel


<h1>@Model.CurrentCategory</h1>


<div class="form-group">
    <label class="col-md-2 control-label">Select Category</label>
    <div class="col-md-2">
        <select class="form-control" asp-for="SelectedCategoryId" name="SelectedCategoryId" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))"></select>
    </div>
    <div>
        <label class="col-md-2 control-label">Name:</label>
    </div>
    <div class="col-md-5">
        <input type="text" class="form-control" />
    </div>
    <div>
        <button type="button" class="btn">Filter</button>
    </div>
</div>


@foreach (var pie in Model.Pies)
{
    <partial name="_PieCard" model="pie" />
}
