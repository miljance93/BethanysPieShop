
@model PieVM

<h2>@Model.Name</h2>

<div class="thumbnail">
    @if (Model.ImageThumbnailUrl.Contains("Picture"))
    {
        <img src="~/PieImages/@Model.ImageThumbnailUrl" />
    }
    @if (!Model.ImageThumbnailUrl.Contains("Picture"))
    {
        <img alt="@Model.Name" src="@Model.ImageUrl">
    }
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <div>
            <p class="button">
                <a class="btn btn-primary" asp-controller="PieManager" asp-action="DeletePie"
                   asp-route-pieId="@Model.PieId">Delete Pie</a>
            </p>
        </div>
    </div>
</div>